#!/usr/bin/env bash

#homebrew
export PATH="$(brew --prefix)/bin:$PATH"
export PATH="$(brew --prefix)/sbin:$PATH"
#composer
export PATH="$PATH:~/.composer/vendor/bin"
#gnu utils
export PATH="$PATH:(brew --prefix coreutils)/libexec/gnubin"
#brew cask install path
export HOMEBREW_CASK_OPTS="--appdir=/Applications"
#go $ brew info go
# https://gist.github.com/vsouza/77e6b20520d07652ed7d
export GOPATH="$HOME/golang"
export GOROOT="$(brew --prefix)/opt/go/libexec"
export PATH="$PATH:$GOPATH/bin"
export PATH="$PATH:$GOROOT/bin"
# homebrew cask contrib
export PATH="$PATH:$(brew --prefix)/Library/Taps/caskroom/homebrew-cask/developer/bin"
#brewed python
export PATH="$PATH:$(brew --prefix python)/libexec/bin"
#yarn
export PATH="$PATH:$HOME/.yarn/bin"
#brewed bison
export PATH="$PATH:$(brew --prefix)/opt/bison/bin"
#brewed curl
export PATH="$PATH:$(brew --prefix)/opt/curl/bin"
#other brewed formulas
export PATH="$PATH:$(brew --prefix)/opt/dirmngr/bin"
export PATH="$(brew --prefix)/opt/curl/bin:$PATH"
export PATH="$(brew --prefix)/opt/icu4c/bin:$PATH"
export PATH="$(brew --prefix)/opt/icu4c/sbin:$PATH"
export PATH="$(brew --prefix)/opt/libxml2/bin:$PATH"
export PATH="$(brew --prefix)/opt/qt/bin:$PATH"
export PATH="$(brew --prefix)/opt/unzip/bin:$PATH"
#redis
export PATH="/Applications/Redis.app/Contents/Resources/Vendor/redis/bin:$PATH"
#nss - firefox cert automation
export PATH="$(brew --prefix)/opt/nss/bin:$PATH"

#behat
export PATH="./vendor/bin:$PATH"

#pyenv  - https://github.com/pyenv/pyenv
export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"

#hermes
export PATH="$PATH:~/golang/src/github.com/troyxmccall/hermes/dist"

#jenv
export PATH="$HOME/.jenv/bin:$PATH"

#libffi
# export LDFLAGS="-L$(brew --prefix)/opt/libffi/lib"
# export PKG_CONFIG_PATH="$(brew --prefix)/opt/libffi/lib/pkgconfig"
